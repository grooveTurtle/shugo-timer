{
  "appId": "com.shugo.timer",
  "productName": "ShugoTimer",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "removePackageScripts": true,
  "compression": "normal",
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json",
    "build/icon.ico"
  ],
  "extraResources": [
    {
      "from": "build/icon.ico",
      "to": "icon.ico"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "signAndEditExecutable": false
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "build/icon.icns",
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icon.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
